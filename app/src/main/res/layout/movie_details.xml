<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/details_view_content_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MovieDetailsActivity"
    tools:showIn="@layout/movie_details_container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/movie_year_text_view"
            android:layout_toRightOf="@+id/movie_details_poster"
            android:layout_toEndOf="@+id/movie_details_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/movie_details_poster"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/movie_rating_text_view"
            android:layout_toRightOf="@+id/movie_details_poster"
            android:layout_toEndOf="@+id/movie_details_poster"
            android:layout_below="@id/movie_year_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/movie_overview"
            android:layout_toRightOf="@+id/movie_details_poster"
            android:layout_toEndOf="@+id/movie_details_poster"
            android:layout_below="@id/movie_rating_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
